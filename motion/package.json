{
  "name": "@capacitor/motion",
  "version": "0.0.3",
  "description": "The Motion API tracks accelerometer and device orientation (compass heading, etc.)",
  "main": "dist/plugin.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/"
  ],
  "author": "Ionic <hi@ionicframework.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/capacitor-plugins"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/capacitor-plugins/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "docgen": "docgen --api MotionPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "verify": "npm run build",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@capacitor/android": "file:../../capacitor/android",
    "@capacitor/core": "file:../../capacitor/core",
    "@capacitor/docgen": "^0.0.10",
    "@capacitor/ios": "file:../../capacitor/ios",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "~1.0.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "eslint": "^7.11.0",
    "prettier": "~2.2.0",
    "prettier-plugin-java": "~1.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.29.0",
    "typescript": "~4.0.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.0.0-alpha.6"
  },
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {},
  "publishConfig": {
    "access": "public"
  }
}
